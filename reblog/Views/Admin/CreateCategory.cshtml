<style type="text/css">
    .input_group {
        max-width: 200px;
        min-width: 100px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post, new {}))
            {
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Nova categoria</legend>

                    <div class="control-group">
                        <label class="control-label" for="tag">Categorias existentes</label>
                        <div class="controls">
                            <select name="existingtags" id="tag">
                                @foreach (reblog.App.Domain.Category category in @ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="name">Nome</label>
                        <div class="controls">
                            <input type="text" name="category.Name" id="name" class="form-control input-xlarge" />
                        </div>
                    </div>

                    <p>
                        <input type="submit" value="Create" />
                    </p>
                </fieldset>
            }
        </div>
    </div>
    <div class="row">
        @Html.ActionLink("Voltar", "Index")
    </div>
</div>



