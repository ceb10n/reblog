<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="reblogbr">
        <link rel="shortcut icon" href="../../assets/ico/favicon.png">
        <meta name="robots" content="index, follow"> 
        <meta name="og:type" content="website" />
        @if (ViewBag.Description != null)
        {
            <meta name="description" content="@ViewBag.Description">
        }
        @if (ViewBag.Keywords != null)
        {
            <meta name="keywords" content="@ViewBag.Keywords"/>
        }
        @if (ViewBag.OgImg != null)
        {
            <meta property="og:image" content="@ViewBag.OgImg" />
        }
        @if (ViewBag.OgUrl != null)
        {
            <meta property="og:url" content="@ViewBag.OgUrl" />
        }
        @if (ViewBag.OgTitle != null)
        {
            <meta property="og:title" content="@ViewBag.OgTitle" />
        }
        @if (ViewBag.OgDescription != null)
        {
            <meta property="og:description" content="@ViewBag.OgDescription" />
        }
        <title>
            @if (string.IsNullOrEmpty(ViewBag.Title))
            {
                @:reblog - Agregador de Links e Conteúdo
            }
            else
            {
                @ViewBag.Title
            }
        </title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
        <!--[if lt IE 9]>
          <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js.js"></script>
          <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.2.0/respond.js"></script>
        <![endif]-->

        <script type="text/javascript" src="https://apis.google.com/js/plusone.js">
          {lang: 'pt-BR'}
        </script>

        <link rel="stylesheet" href="~/Content/bootstrap-override.css" />
