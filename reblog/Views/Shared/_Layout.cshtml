        </div>

        @RenderBody()
        
        <hr />    
        <div class="container">      
            <footer>
                <div class="text-center">
                    <hr />
                    <div class="fb-like" data-href="https://www.facebook.com/reblogbr" data-width="600" data-height="80" data-colorscheme="light" data-layout="standard" data-action="like" data-show-faces="true" data-send="false"></div>
