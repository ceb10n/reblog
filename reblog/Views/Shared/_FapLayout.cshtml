            <meta name="description" content="@ViewBag.Description">
        }
        @if (ViewBag.Keywords != null)
        {
            <meta name="keywords" content="@ViewBag.Keywords"/>
        }
        @if (ViewBag.OgImg != null)
        {
            <meta property="og:image" content="@ViewBag.OgImg" />
        }
        @if (ViewBag.OgUrl != null)
        {
            <meta property="og:url" content="@ViewBag.OgUrl" />
        }
        @if (ViewBag.OgTitle != null)
        {
            <meta property="og:title" content="@ViewBag.OgTitle" />
        }
        @if (ViewBag.OgDescription != null)
        {
            <meta property="og:description" content="@ViewBag.OgDescription" />
        }
        <title>
            @if (string.IsNullOrEmpty(ViewBag.Title))
            {
                @:reblog - Agregador de Links e Conteúdo
            }
            else
